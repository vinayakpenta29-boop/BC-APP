<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f6fb"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top menu row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/menuButton"
                android:text="â‹®"
                android:textSize="24sp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/titleMain"
            android:text="Main BC Entry"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Material 3 Exposed Dropdowns -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- BC Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select BC"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerBc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Member Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select Member"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerMember"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Date -->
        <EditText
            android:id="@+id/editPayDate"
            android:hint="Date"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_curved"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Amount -->
        <EditText
            android:id="@+id/editPayAmount"
            android:hint="Amount"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_curved"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp" />

        <!-- ADD Button -->
        <Button
            android:id="@+id/buttonAdd"
            android:text="ADD"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_add_ripple"
            android:elevation="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/tableContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
